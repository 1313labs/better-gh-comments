  {
    "name": "Github Comments",
    "version": "2",
    "description": "Gets information from Google.",
    "icons": {
      "128": "icon.png"
    },
    "background": {
      "persistent": false,
      "scripts": ["background_script.js"]
    },
    "permissions": ["https://*.github.com/*", "activeTab", "storage", "declarativeContent"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "manifest_version": 2
  }